{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "warn",
    "no-plusplus": "off",
    "max-len": [
      "error",
      140,
      {
        "ignoreUrls": true
      }
    ],
    "no-tabs": "off",
    "no-alert": "off",
    "prefer-destructuring": "warn",
    "indent": [
      2,
      "tab"
    ],
    "no-param-reassign": "off"
  }
}
